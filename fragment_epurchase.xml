<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Epurchase_fragment"
    tools:ignore="MissingDefaultResource"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout">
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/sidenavigation_view"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#EB06B10D">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarclick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="?attr/actionBarTheme"
                    app:title="E-Purchase"
                    app:titleTextColor="#FCFFFD"
                    app:navigationIcon="@drawable/ic_organic_category" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/paymenttransferrequest"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D4F1D5"
                        android:padding="15dp">


                        <ImageView
                            android:id="@+id/paymentrequest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            app:srcCompat="@drawable/app" />

                        <TextView
                            android:id="@+id/leftpoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/paymentrequest"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="Payment Transfer Request"
                            android:textColor="#070707"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewbutton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D4F1D5"
                        android:padding="15dp">


                        <ImageView
                            android:id="@+id/epurchase"
                            android:layout_width="66dp"
                            android:layout_height="67dp"
                            android:layout_centerHorizontal="true"
                            app:srcCompat="@drawable/e_purchase"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/rightpoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/epurchase"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="E-Purchase"
                            android:textColor="#070707"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/epurchasereport"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D4F1D5"
                        android:padding="15dp">


                        <ImageView
                            android:id="@+id/epurchaseimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            app:srcCompat="@drawable/reportt" />

                        <TextView
                            android:id="@+id/epurchase1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/epurchaseimage"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="E-Purchase Report"
                            android:textColor="#070707"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/couponcardview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D4F1D5"
                        android:padding="15dp">


                        <ImageView
                            android:id="@+id/couponimage"
                            android:layout_width="66dp"
                            android:layout_height="67dp"
                            android:layout_centerHorizontal="true"
                            app:srcCompat="@drawable/request"
                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/coupontext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/couponimage"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="Coupon"
                            android:textColor="#070707"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>