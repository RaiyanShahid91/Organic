<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Member_details_First"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#EB06B10D"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/arrowback" />
            <TextView
                android:id="@+id/refer_earn_btn"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:gravity="center"
                android:text="E-Pin"
                android:textColor="#ffff"
                android:textSize="18sp"></TextView>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="15dp">
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textsearch"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:hint="Search here"
                            android:text="6200991"
                            android:layout_marginLeft="80dp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/search"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/imageofsearch"></TextView>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Member Code"
                    android:textColor="#070707"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INWB060229"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="#070707"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/input_btn"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Member Name"
                    android:textColor="#070707"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HAKIMUDDIN"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="#070707"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/input_btn"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Package"
                    android:textColor="#070707"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bronze"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="#070707"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/input_btn"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Package Amount"
                    android:textColor="#070707"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4000"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="#070707"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/input_btn"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Status"
                    android:textColor="#070707"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="#070707"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/input_btn"
                    android:layout_marginTop="5dp">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Activate member Code"
                    android:textColor="#070707"
                    android:textSize="15sp"></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Activate Member Code"
                    android:padding="5dp"
                    android:id="@+id/activatemembercode"
                    android:textSize="15sp"
                    android:textColor="#070707"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/input_btn"
                    android:layout_marginTop="5dp">
                </EditText>

                <Button
                    android:id="@+id/activate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Activate Now"
                    android:textColor="#ffff"
                    android:layout_margin="40dp"
                    android:background="@drawable/sign_up_in_button"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Activate Member Name"
                    android:textColor="#070707"
                    android:textSize="15sp"
                    android:id="@+id/membername"
                    android:visibility="invisible"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PRAHALAD PRASAD"
                    android:id="@+id/text2"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="#070707"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/input_btn"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/text3"
                    android:text="Activate Member Phone No."
                    android:textColor="#070707"
                    android:textSize="15sp"
                    android:visibility="invisible"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9931873404"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:id="@+id/text4"
                    android:textColor="#070707"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/input_btn"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/text5"
                    android:text="Activate Member Status"
                    android:textColor="#070707"
                    android:textSize="15sp"
                    android:visibility="invisible"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="#070707"
                    android:id="@+id/text6"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/input_btn"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible">
                </TextView>
                <Button
                    android:id="@+id/activatesecondbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upgrade"
                    android:textColor="#ffff"
                    android:layout_margin="40dp"
                    android:visibility="invisible"
                    android:background="@drawable/sign_up_in_button"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>