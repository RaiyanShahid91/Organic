<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EpinCategory"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout">
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/sidenavigation_view"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#EB06B10D">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarclick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="?attr/actionBarTheme"
                    app:title="E-Purchase"
                    app:titleTextColor="#FCFFFD"
                    app:navigationIcon="@drawable/ic_organic_category" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/myepin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D4F1D5"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/mypinimg"
                            android:layout_width="120dp"
                            android:layout_height="56dp"
                            android:src="@drawable/mypin"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/mypinimg"
                            android:layout_margin="10sp"
                            android:layout_marginStart="10sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginEnd="10sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="10sp"
                            android:gravity="center"
                            android:text="My Pin"
                            android:textColor="#070707"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/purchasepin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D4F1D5"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/purchasepinimg"
                            android:layout_width="126dp"
                            android:layout_height="54dp"
                            android:src="@drawable/purchasepin"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/purchasepinimg"
                            android:layout_margin="10sp"
                            android:layout_marginStart="10sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginEnd="10sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="10sp"
                            android:gravity="center"
                            android:text="Purchase Pin"
                            android:textColor="#070707"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/purchaselist"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D4F1D5"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/purchaselistimg"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:src="@drawable/purchaselist"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/purchaselistimg"
                            android:layout_margin="10sp"
                            android:layout_marginStart="10sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginEnd="10sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="10sp"
                            android:gravity="center"
                            android:text="Purchase List"
                            android:textColor="#070707"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>



                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/used"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D4F1D5"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/usedimg"
                            android:layout_width="116dp"
                            android:layout_height="58dp"
                            android:src="@drawable/used"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/usedimg"
                            android:layout_margin="10sp"
                            android:layout_marginStart="10sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginEnd="10sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="10sp"
                            android:gravity="center"
                            android:text="Used"
                            android:textColor="#070707"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>



                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>