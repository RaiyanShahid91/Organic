<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_margin="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linear"
                    android:background="#049F0B">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/status"
                        android:text="Status :"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#ffff"
                        android:layout_marginLeft="5dp"
                        android:padding="7dp"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/statusans"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#ffff"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:padding="7dp"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date"
                        android:text="P.Date :"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#ffff"
                        android:layout_marginLeft="5dp"
                        android:padding="7dp"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dateans"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#ffff"
                        android:padding="7dp"
                        android:layout_marginLeft="2dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearsecond"
                    android:layout_below="@id/linear"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#070707"
                        android:textSize="12sp"
                        android:text="Epin :"
                        android:textStyle="bold"
                        android:id="@+id/epin"
                        android:layout_marginLeft="5dp"
                        android:padding="7dp"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#070707"
                        android:textSize="12sp"
                        android:id="@+id/epinans"
                        android:layout_marginLeft="2dp"
                        android:padding="7dp"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#070707"
                        android:textSize="12sp"
                        android:id="@+id/epinaccountno"
                        android:layout_marginLeft="3dp"
                        android:padding="7dp"></TextView>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/copied"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/copyimage"
                        android:layout_gravity="center"></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/linearsecond"
                    android:id="@+id/linearthird">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pinvalue"
                        android:layout_marginLeft="5dp"
                        android:padding="7dp"
                        android:textStyle="bold"
                        android:text="Pin Value :"
                        android:textSize="12sp"
                        android:textColor="#070707"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pinvalueans"
                        android:layout_marginLeft="2dp"
                        android:padding="7dp"
                        android:textSize="12sp"
                        android:textColor="#070707"></TextView>
                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
