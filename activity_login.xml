<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#86F18A"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrowback"
            android:layout_margin="15dp"
            android:id="@+id/back"></ImageView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#32B303"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/saveco"
                    android:padding="10dp"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:fontFamily="cursive"
                    android:padding="10dp"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Member Id"
                    android:textSize="15sp"
                    android:textColor="#FFFEFE"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:padding="4dp"></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#070707"
                    android:hint="Member Id"
                    android:gravity="center"
                    android:id="@+id/email"
                    android:textSize="15sp"
                    android:textColorHint="#070707"
                    android:background="@drawable/inputtextbuttoninprofile"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/ic_baseline_account_circle_24"></EditText>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="15sp"
                    android:textColor="#FFFEFE"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:padding="4dp"></TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#070707"
                    android:hint="xxxxxx"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:id="@+id/password"
                    android:textColorHint="#070707"
                    android:background="@drawable/inputtextbuttoninprofile"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/ic_lock"></EditText>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forget Password?"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:id="@+id/forgetpassword"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Don't Have account? Join Now"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:id="@+id/donthave"></TextView>

                <Button
                    android:id="@+id/join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/loginandjoinbutton"
                    android:text="Login"
                    android:textColor="#070707"
                    android:textSize="15sp"
                    android:textStyle="bold"></Button>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login Using"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#FFFDFD"
                    android:gravity="center"
                    android:layout_margin="15dp"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:padding="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/facebook"
                        android:id="@+id/facebook"
                        android:layout_margin="10dp"></ImageView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/googleplus"
                        android:id="@+id/google"
                        android:layout_margin="10dp"></ImageView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

</LinearLayout>