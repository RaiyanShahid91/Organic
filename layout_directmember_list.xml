<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#049F0B"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/membercode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:text="Member Code :"
                    android:textColor="#FDFDFD"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"></TextView>

                <TextView
                    android:id="@+id/membercodeans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textColor="#FDFDFD"
                    android:textSize="10sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/membername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="7dp"
                    android:text="Member Name :"
                    android:textColor="#FDFDFD"
                    android:textSize="10sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/membernameans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="7dp"
                    android:textColor="#FDFDFD"
                    android:textSize="10sp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/joiningdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:text="Joining Date :"
                    android:textColor="#050505"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/joiningdateans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:layout_marginRight="50dp"
                    android:textColor="#050505"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/activationdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="7dp"
                    android:text="Activation Date :"
                    android:textColor="#050505"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/activationdateans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="7dp"
                    android:textColor="#050505"
                    android:textSize="10sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currentself"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:text="Current Self :"
                    android:textColor="#050505"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/currentselfans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textColor="#050505"
                    android:layout_marginRight="95dp"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/accumulatedself"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:text="Accumulated Self :"
                    android:textColor="#050505"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/accumulatedselfans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="7dp"
                    android:textColor="#050505"
                    android:textSize="10sp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/accumulatedgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:text="Accumulated Self :"
                    android:textColor="#050505"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/accumulatedgroupans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textColor="#050505"
                    android:textSize="10sp"
                    android:layout_marginRight="70dp"></TextView>

                <TextView
                    android:id="@+id/currentgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="7dp"
                    android:text="Current Group :"
                    android:textColor="#050505"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:id="@+id/currentgroupans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="7dp"
                    android:textColor="#050505"
                    android:textSize="10sp"></TextView>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>